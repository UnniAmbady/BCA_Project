import streamlit as st
import streamlit.components.v1 as components

def about():
    st.write("About the BCA Project"
    # Embed Microsoft Sway iframe in Streamlit
    sway_iframe = """
    <iframe width="760px" height="500px" src="https://sway.cloud.microsoft/s/vQFtLnQTDaYLqiAM/embed" 
    frameborder="0" marginheight="0" marginwidth="0" max-width="100%" 
    sandbox="allow-forms allow-modals allow-orientation-lock allow-popups allow-same-origin allow-scripts" 
    scrolling="no" style="border: none; max-width: 100%; max-height: 100vh" 
    allowfullscreen mozallowfullscreen msallowfullscreen webkitallowfullscreen></iframe>
    """
    
    # Display the iframe in the Streamlit app
    components.html(sway_iframe, height=500)
